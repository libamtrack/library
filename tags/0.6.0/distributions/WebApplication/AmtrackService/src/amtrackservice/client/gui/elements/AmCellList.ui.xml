<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      width: 100px;
    }
    .cellTable td{
      height: 35px;
    }
    
  </ui:style>

  <g:HTMLPanel>
    <g:VerticalPanel>
      <c:CellTable
            addStyleNames='{style.cellTable}'
            ui:field='cellTable' />
      <g:HorizontalPanel>
        <g:TextArea ui:field='addTextArea'/>
         <g:Button ui:field='addButton'>
              <ui:msg key='addButton'>Add</ui:msg>
         </g:Button>
      </g:HorizontalPanel>                         
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>
