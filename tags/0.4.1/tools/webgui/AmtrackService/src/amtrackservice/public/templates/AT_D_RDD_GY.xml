<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<root name="RDD vs distance" wrapper="AT_D_RDD_GY.exe">
	<description>
		Returns RDD as a function of distance
	</description>
	<input>
		<element type="field" label="r minimum [m]" datatype="double">
			<description>r [m] minimum</description>
			<preset>
				<item value="1e-10" />
			</preset>
			<data x="r_min" />
		</element>
		<element type="field" label="r maximum [m]" datatype="double">
			<description>r [m] maximum</description>
			<preset>
				<item value="1e-5" />
			</preset>
			<data x="r_max" />
		</element>
		<element type="field" label="number of points" datatype="long">
			<description>number of points</description>
			<preset>
				<item value="30" />
			</preset>
			<data x="n_points" />
		</element>
		<element type="combo" label="X axis spacing" datatype="long">
			<entry>
				<item key="Logarithmic" value="1" />
				<item key="Linear" value="2" />
			</entry>
			<description>X axis spacing</description>
			<preset>
				<item value="1" />
			</preset>
			<data x="x_axis_type" />
		</element>
		<element type="field" label="E_MeV_u" datatype="double">
			<description>particle (ion) energy per nucleon [MeV/amu]</description>
			<preset>
				<item value="60" />
			</preset>
			<data x="E_MeV_u" />
		</element>

		<element type="combo" label="particle" datatype="long">
			<entry>
				<item key="Hydrogen" value="1001" />
				<item key="Helium-3" value="2003" />
				<item key="Helium-4" value="2004" />
				<item key="Berylium" value="4008" />
				<item key="Carbon" value="6012" />
				<item key="Oxygen" value="8016" />
				<item key="Neon" value="10020" />
				<item key="Iron" value="26056" />
				<item key="Xeon" value="54132" />
				<item key="Uranium" value="92238" />
			</entry>
			<description>particle[br]Default value is set to Hydrogen</description>
			<preset>
				<item value="1001" />
			</preset>
			<data x="particle_no" />
		</element>

		<element type="combo" label="material" datatype="long">
			<description>material code number</description>
			<entry>
				<item key="Liquid Water" value="1" />
				<item key="Aluminum Oxide" value="2" />
				<item key="Aluminum" value="3" />
				<item key="PMMA" value="4" />
				<item key="Alanine" value="5" />
				<item key="LiF" value="6" />
				<item key="Air" value="7" />
			</entry>
			<preset>
				<item value="1" />
			</preset>
			<data x="material_no" />
		</element>	
		
		<element type="combo" label="rdd_model" datatype="long">
			<description>Radial Dose Distribution model</description>
			<entry>
				<item key="Test" value="1" />
				<item key="KatzPoint" value="2" />
				<item key="Geiss" value="3" />
				<item key="KatzSite" value="4" />
				<item key="CucinottaPoint" value="5" />
				<item key="KatzExtTarget" value="6" />
				<item key="CucinottaExtTarget" value="7" />
			</entry>
			<preset>
				<item value="3" />
			</preset>
			<data x="rdd_model" />
		</element>			

		<element type="combo" label="er_model" datatype="long">
			<description>delta electron range model</description>
			<entry>
				<item key="Test" value="1" />
				<item key="ButtsKatz" value="2" />
				<item key="Waligorski" value="3" />
				<item key="Geiss" value="4" />
				<item key="Scholz" value="5" />
				<item key="Edmund" value="6" />
				<item key="Tabata" value="7" />
			</entry>
			<preset>
				<item value="7" />
			</preset>
			<data x="er_model" />
		</element>
	</input>

	<output>
		<element type="plot" label="RDD [Gy] vs distance [m]" datatype="double">
			<description>RDD [Gy] vs distance [m]</description>
			<data x= "r" y="RDD" />
			<axis x="log" y="log" />
		</element>
	</output>
</root>
